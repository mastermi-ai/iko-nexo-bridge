    <Reference Include="Sfera">
      <HintPath>C:\Program Files\InsERT\nexo PRO\Sfera.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Sfera.Model">
      <HintPath>C:\Program Files\InsERT\nexo PRO\Sfera.Model.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="InsERT.Mox">
      <HintPath>C:\Program Files\InsERT\nexo PRO\InsERT.Mox.dll</HintPath>
      <Private>true</Private>
    </Reference>
  </ItemGroup>
  -->

</Project>
