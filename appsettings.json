{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/iko-nexo-bridge-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "CloudApi": {
    "BaseUrl": "http://localhost:3000",
    "ApiKey": "YOUR_BRIDGE_API_KEY",
    "PollingIntervalSeconds": 30,
    "RequestTimeoutSeconds": 30,
    "MaxRetryAttempts": 3
  },
  "NexoPro": {
    "ServerName": "localhost\\NEXOPRO",
    "DatabaseName": "nexo_iko",
    "Username": "",
    "Password": "",
    "OperatorSymbol": "ADMIN",
    "OperatorPassword": "",
    "DefaultWarehouse": "MAG",
    "DefaultDocumentType": "ZK"
  },
  "Sync": {
    "SyncOrdersEnabled": true,
    "SyncProductsEnabled": true,
    "SyncCustomersEnabled": true,
    "ProductsSyncIntervalMinutes": 60,
    "CustomersSyncIntervalMinutes": 60
  }
}
